{
  "name": "data-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/data-frontend/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:frontend", "layer:data"],
  "metadata": {
    "description": "Frontend-specific data repositories and services",
    "technologies": ["TypeScript", "RxJS"]
  },
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/data-frontend",
        "main": "libs/data-frontend/src/index.ts",
        "tsConfig": "libs/data-frontend/tsconfig.lib.json",
        "assets": ["libs/data-frontend/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/data-frontend/jest.config.ts"
      }
    }
  }
}
