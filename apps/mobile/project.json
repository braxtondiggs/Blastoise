{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": ["type:app", "platform:mobile", "scope:frontend"],
  "metadata": {
    "description": "Capacitor wrapper serving web PWA for iOS/Android",
    "technologies": ["Capacitor"]
  },
  "targets": {
    "sync": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx cap sync"],
        "cwd": "apps/mobile"
      },
      "dependsOn": ["web:build"]
    },
    "open:ios": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx cap open ios"],
        "cwd": "apps/mobile"
      },
      "dependsOn": ["sync"]
    },
    "open:android": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx cap open android"],
        "cwd": "apps/mobile"
      },
      "dependsOn": ["sync"]
    },
    "run:ios": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx cap run ios"],
        "cwd": "apps/mobile"
      },
      "dependsOn": ["sync"]
    },
    "run:android": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx cap run android"],
        "cwd": "apps/mobile"
      },
      "dependsOn": ["sync"]
    }
  }
}
